select
  row_number() OVER (order by NUM_COM_AP) as IDD,
  NUM_COM_AP,
  TIP_COM_AP + REPLACE(STR(C_EMISOR,3),' ', '0') + REPLACE(STR(NUM_COM_AP,8),' ', '0') + replace(convert(NVARCHAR, FECHA_FACT, 103), '/', '') as FK_ERP_CRE_MIG,
  CUOTAS as CUOTA,
  (select count(*) from _ERP_CRE_PER_LC 
   where tip_com_ap = cp.tip_com_ap
     and c_emisor = cp.c_emisor
     and num_com_ap = cp.num_com_ap
     and FECHA_FACT = cp.FECHA_FACT
   ) as QUANTY,
   CUOTAS - (select count(*) from _ERP_CRE_PER_LC 
   where tip_com_ap = cp.tip_com_ap
     and c_emisor = cp.c_emisor
     and num_com_ap = cp.num_com_ap
     and FECHA_FACT = cp.FECHA_FACT and FECHA_VENC > cp.FECHA_VENC
   ) as CUOTA,
  FECHA_VENC as VTO,
  SALDO as IMP_CUOTA
from _ERP_CRE_PER_LC CP
